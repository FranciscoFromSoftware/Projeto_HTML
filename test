  <script>
    const skills = {
      chartPython: { label: "Python", value: 82 },
      chartPowerBI: { label: "Power BI", value: 86 },
      chartPowerApps: { label: "Power Apps", value: 78 },
      chartPowerAutomate: { label: "Power Automate", value: 89 },
      chartExcel: { label: "Excel", value: 94 },
      chartSQL: { label: "SQL", value: 84 },
      chartSharepoint: { label: "Sharepoint", value: 92 },
      chartR: { label: "R", value: 88 },
      chartPentaho: { label: "Pentaho", value: 76 },
      chartFigma: { label: "Figma", value: 71 }
    };

    Object.entries(skills).forEach(([id, { label, value }]) => {
      const skillCard = document.getElementById(id).parentNode;
      const percentageSpan = document.createElement('span');
      percentageSpan.classList.add('skill-percentage');
      percentageSpan.textContent = `${value}%`;
      skillCard.appendChild(percentageSpan);

      const labelParagraph = document.createElement('p');
      labelParagraph.classList.add('skill-label');
      labelParagraph.textContent = label;
      skillCard.appendChild(labelParagraph);

      const ctx = document.getElementById(id).getContext('2d');
      new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: [label],
          datasets: [{
            data: [value, 100 - value],
            backgroundColor: ['#00c6ff', 'transparent'],
            borderWidth: 5,
            borderColor: ['#00c6ff', 'transparent'],
            cutout: '80%',
            circumference: 180,
            rotation: 270
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          cutoutPercentage: 80,
          rotation: -90,
          circumference: 180,
          plugins: {
            tooltip: { enabled: false },
            legend: { display: false },
            title: { display: false }
          }
        }
      });
    });
  </script>

